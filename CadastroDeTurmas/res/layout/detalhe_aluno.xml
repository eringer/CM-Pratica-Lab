<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        
        <TextView 
            android:text="nome"
            android:layout_width="200sp"
            android:layout_height="wrap_content" />
        <EditText 
            android:id="@+id/editAlunoNome"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        
        <TextView 
            android:text="data de nascimento"
            android:layout_width="200sp"
            android:layout_height="wrap_content" />
        <EditText 
            android:id="@+id/editAlunoDataNascimento"
            android:inputType="date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        
        <TextView 
            android:text="sexo"
            android:layout_width="200sp"
            android:layout_height="wrap_content" />
        <EditText 
            android:id="@+id/editAlunoSexo"
            android:maxLength="1"
            android:layout_width="100sp"
            android:layout_height="wrap_content" />
        
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        
        <TextView 
            android:text="email"
            android:layout_width="200sp"
            android:layout_height="wrap_content" />
        <EditText 
            android:id="@+id/editAlunoEmail"
            android:inputType="textEmailAddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        
        <TextView 
            android:text="cidade"
            android:layout_width="200sp"
            android:layout_height="wrap_content" />
        <EditText 
            android:id="@+id/editAlunoCidade"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        
    </LinearLayout>

    <Button
        android:id="@+id/buttonAlunoSalvar"
        android:text="salvar"
        android:layout_width="200sp"
        android:layout_height="wrap_content" />
    
</LinearLayout>